<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="ro.pub.cs.systems.pdsd.lab03.phonedialer.activities.PhoneDialerActivity" >

    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/none" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    
  <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:rowCount="3"
        android:columnCount="9" >
        
        <ImageButton
            android:id="@+id/button_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="0"
            android:src="@drawable/call"
            android:layout_gravity="center"
            android:contentDescription="@string/none" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="1" />
        
        <Button
            android:id="@+id/button_character_star"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/character_star" />        
        
        <ImageButton
            android:id="@+id/button_backspace"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="4"
            android:src="@drawable/backspace"
            android:layout_gravity="center"
            android:contentDescription="@string/none" />
        
        <Button
            android:id="@+id/button_character_pound"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="6"
            android:text="@string/character_pound" />
        
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="7" />
        
        <ImageButton
            android:id="@+id/button_hangup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="8"
            android:src="@drawable/hangup"
            android:layout_gravity="center"
            android:contentDescription="@string/none" />   
        
        <Button
            android:id="@+id/button_digit_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/digit_1" />
        
        <Button
            android:id="@+id/button_digit_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/digit_2" />
                
        <Button
            android:id="@+id/button_digit_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="4"
            android:text="@string/digit_3" />
        
        <Button
            android:id="@+id/button_digit_4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="5"
            android:text="@string/digit_4" />
        
        <Button
            android:id="@+id/button_digit_5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="6"
            android:text="@string/digit_5" />
                
        <Button
            android:id="@+id/button_digit_6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/digit_6" />

        <Button
            android:id="@+id/button_digit_7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/digit_7" />
        
        <Button
            android:id="@+id/button_digit_8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="4"
            android:text="@string/digit_8" />
                
        <Button
            android:id="@+id/button_digit_9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="5"
            android:text="@string/digit_9" />
        
        <Button
            android:id="@+id/button_digit_0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="6"
            android:text="@string/digit_0" />

    </GridLayout>

</LinearLayout>
