<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ro.pub.cs.systems.pdsd.lab03.examples.buttonsamples.ButtonSamplesActivity" >

    <ImageButton
        android:id="@+id/help_image_button"
        android:layout_width="30dp"
     	android:layout_height="30dp"
     	android:layout_gravity="right"
     	android:src="@drawable/ic_help"
     	android:background="@null"
     	android:contentDescription="@string/none" />    
    
    <RadioGroup
        android:id="@+id/select_weekday_radio_group"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
       	android:orientation="horizontal" >
            
        <RadioButton
            android:id="@+id/monday_button"
            android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
      	    android:text="@string/monday" />

        <RadioButton
            android:id="@+id/tuesday_button"
            android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:text="@string/tuesday" />
            
        <RadioButton
            android:id="@+id/wedneday_button"
            android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
       	    android:text="@string/wednesday" />
            
        <RadioButton
            android:id="@+id/thursday_button"
            android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
      	    android:text="@string/thursday" />
            
        <RadioButton
            android:id="@+id/friday_button"
            android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
       	    android:text="@string/friday" />
           
    </RadioGroup>
    
    <CheckBox
        android:id="@+id/display_only_free_slots_check_button"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:text="@string/display_only_free_slots" />
    
    <ToggleButton
        android:id="@+id/notify_toggle_button"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:textOn="@string/notify_on"
     	android:textOff="@string/notify_off" />
    
    <Switch 
        android:id="@+id/display_suggestions_switch"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:textOn="@string/suggestions_on"
     	android:textOff="@string/suggestions_off" />
    
    <Button
        android:id="@+id/send_request_button"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_gravity="center"
     	android:text="@string/send_request" />
    
</LinearLayout>
